<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL55Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/rentlio</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">wampwamp</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.chamodshehanka.rentLioServer.entity.Admin"/>
        <mapping class="com.chamodshehanka.rentLioServer.entity.Branch"/>
        <mapping class="com.chamodshehanka.rentLioServer.entity.Customer"/>
        <mapping class="com.chamodshehanka.rentLioServer.entity.Driver"/>
        <mapping class="com.chamodshehanka.rentLioServer.entity.Payment"/>
        <mapping class="com.chamodshehanka.rentLioServer.entity.Reception"/>
        <mapping class="com.chamodshehanka.rentLioServer.entity.Reservation"/>
        <mapping class="com.chamodshehanka.rentLioServer.entity.Vehicle"/>
    </session-factory>
</hibernate-configuration>